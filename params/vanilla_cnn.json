{
    "run": {
        "name": "VanillaCNN",
        "train": false,
        "evaluate": true,
        "experiment": false
    },
    "dataloader": {
        "name": "DresdenDataLoader",
        "database": "dresden",
        "database_csv": "data/dresden.csv",
        "database_image_dir": "data/dresden",
        "patch_dir": "data/dresden_base",
        "brands": ["Canon", "Canon", "Nikon", "Nikon", "Sony"],
        "models": ["Ixus70", "Ixus55", "D200", "D70", "DSC-H50"],
        "brand_models": [],
        "extract_span": 1280,
        "num_patch": 25,
        "even_database": false,
        "random_seed": 42
    },
    "model":{
        "name": "VanillaCNN",
        "input_shape": {"width":256, "height":256}
    },
    "trainer":{
        "name": "VanillaTrainer",
        "epochs": 100,
        "batch_size": 64,
        "lr": 0.0001,
        "optimizer": "AdamOptimizer",
        "ckpt_dir": "ckpts/dresden/vanilla",
        "patience":3
    },    
    "evaluate":{
        "batch_size": 128
    },
    "experiment":{
        "degradation_dir": "data/degradation",
        "random_seed": 42,
        "softmax_stats": true
    },
    "softmax_stats":{
        "degradation_id": ["jpeg", "blur", "noise"],
        "degradation_factor": [70, 1.1, 2.0],
        "histogram_path": "results/dresden/experiment/plot/softmax_stats_hist.png",
        "log_file": "results/dresden/experiment/softmax_stats.log"
    },
    "log":{
        "log_dir": "results/dresden",
        "log_file": "results/dresden/vanilla.log",
        "tensorboard_dir": "logs/",
        "log_step": 150
    }
  }
